<div class = "container">
  <div class = "row d-flex justify-content-center">
    <div class = "col-3 content-title">
      <h3 class = "text-center">投稿編集</h3>
    </div>
  </div>
  <div class = "row content-bg px-3 py-4">
    <div class = "col-6">
      画像
    </div>
    <div class = "col-6">
      <%= render 'posts/error', post: @post %>
      <%= form_with model: @post, local: true do |f| %>
        <div class = "form-group">
          <%= f.label :title, "タイトル" %><br />
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= f.label :description, "説明" %><br />
          <%= f.text_area :description, rows:10, class: "form-control" %>
        </div>
        <div class = "form-group">
          <%= f.label :image, "画像" %><br />
          <%= f.attachment_field :image %>
        </div>
        <div class = "form-group">
          <%= f.label :name, "タグ" %><br />
          <%= f.text_field :name, class: "form_control", value: @tag_list %>
        </div>
        <div class = "form-group mx-5">
          <%= f.submit "変更を保存", class: "btn btn-outline-info btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>