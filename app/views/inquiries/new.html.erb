<div class = "container-fluid">
  <div class = "row">
    <div class = "page-title">
      <h2 class = "text-center mt-5">お問い合わせ</h2>
      <p class = "text-center mt-3">メールで問い合わせることができます!!</p>
    </div>
    <div class = "inquiry-main-image">
      <div class = "main-image-mask w-100"></div>
    </div>
  </div>
  <div class = "row px-5">
    <div class = "inquiry-field mx-auto w-100">
      <h4 class = "text-center py-2 mt-2 inquiry-title">お問い合わせ内容入力</h4>
      <div class = "inquiry-form w-50 mx-auto">
        <%= form_with model: @inquiry, url: inquiries_confirm_path, method: :get, local: true do |f| %>
        <%= render 'layouts/error', obj: @inquiry %>
          <div class = "form-group row">
            <%= f.label :name, "名前", class: "col-4" %>
            <span><%= current_user.name %></span>
            <%= f.hidden_field :name, value: current_user.name %>
          </div>
          <div class = "form-group row">
            <%= f.label :email, "メールアドレス", class: "col-4" %>
            <span><%= current_user.email %></span>
            <%= f.hidden_field :email, value: current_user.email %>
          </div>
          <div class = "form-group row">
            <%= f.label :message, "お問い合わせ内容", class: "col-4" %>
            <%= f.text_area :message, rows: "6", class: "form-control" %>
          </div>
          <div class = "form-group">
            <%= f.submit '確認画面へ', class: 'btn btn-outline-primary btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>