<div id = "ranking" class = "mx-auto">
  <% lastFavorite = 0 %>
  <% j = 1 %>
  <% ranking.each.with_index(1) do |post, i| %>
    <div class = "rank-post-content my-2 py-1">
      <% if i == 1 %>
        <% lastFavorite = post.favorites.count %>
      <% end %>
      <% if post.favorites.count != lastFavorite %>
        <% j = i %>
        <p>第<%= j %>位</p>
        <% lastFavorite = post.favorites.count %>
      <% else %>
        <% lastFavorite = post.favorites.count %>
        <p>第<%= j %>位</p>
      <% end %>
      <div class = "rank-post-image">
        <%= attachment_image_tag post, :image, size: "200x150", fallback: "no_image.png" %>
        <%= link_to "詳細へ", post_path(post.id), class: "px-3 py-2 rank-show-link" %>
      </div>
      <div class = "row">
        <p class = "col-5 pr-0 my-0">タイトル:</p>
        <p class = "col-7 px-0 my-0"><%= post.title %></p>
      </div>
      <div class = "row">
        <p class = "col-5 pr-0 my-0">いいね数:</p>
        <p class = "col-7 px-0 my-0"><%= post.favorites.count %></p>
      </div>
      <div class = "row">
        <p class = "col-5 pr-0">投稿者:</p>
        <p class = "col-7 px-0"><%= post.user.name %></p>
      </div>
    </div>
  <% end %>
</div>