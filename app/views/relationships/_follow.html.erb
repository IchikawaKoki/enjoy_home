<% if current_user.following?(user) %>
  <%= link_to "フォローを外す", user_relationships_path(user.id), method: :delete, remote: true, class: "btn btn-outline-primary btn-block" %>
<% else %>
  <%= link_to "フォローする", user_relationships_path(user.id), method: :post, remote: true, class: "btn btn-outline-success btn-block" %>
<% end %>