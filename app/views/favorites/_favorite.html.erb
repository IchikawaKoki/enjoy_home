<% if post.favorited_by?(current_user) %>
  <%= link_to post.favorites.count, post_favorites_path(post.id), method: :delete, remote: true, class: "fas fa-heart heart-red" %>
<% else %>
  <%= link_to post.favorites.count, post_favorites_path(post.id), method: :post, remote: true, class: "fas fa-heart heart-blue" %>
<% end %>